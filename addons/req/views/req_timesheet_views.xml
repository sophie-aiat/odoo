<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="req_timesheet_form" model="ir.ui.view">
        <field name="name">req.timesheet.form</field>
        <field name="model">req.timesheet</field>
        <field name="arch" type="xml">
            <form string="Timesheet">
                <group string="Employee">
                    <field name="user_id"/>
                </group>
                <group string="Time" col="12">
                    <group colspan="3">
                        <field name="date"/>
                    </group>
                    <group colspan="3">
                        <field name="start" widget="float_time"/>
                    </group>
                    <group colspan="3">
                        <field name="end" widget="float_time"/>
                    </group>
                    <group colspan="3">
                        <field name="duration" widget="float_time"/>
                        <field name="time_filled" widget="float_time"/>
                        <field name="time_to_fill" widget="float_time"/>
                    </group>
                </group>
                <group string="Tasks">
                    <field name="timeentry_ids">
                        <list>
                            <field name="task"/>
                            <field name="duration" widget="float_time"/>
                            <control>
                                <create string="Add a task"/>
                            </control>
                        </list>
                    </field>
                </group>
            </form>
        </field>
    </record>

    <record id="req_timesheet_view_list" model="ir.ui.view">
        <field name="name">req.timesheet.list</field>
        <field name="model">req.timesheet</field>
        <field name="arch" type="xml">
            <list>
                <field name="user_id"/>
                <field name="date"/>
                <field name="duration" widget="float_time"/>
            </list>
        </field>
    </record>

    <record id="req_timesheet_action" model="ir.actions.act_window">
        <field name="name">Timesheet</field>
        <field name="res_model">req.timesheet</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>